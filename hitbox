getgenv().HitSettings = getgenv().HitSettings or {
    HeadSize = 20,
    Transparency = 0.7,
    BrickColor = BrickColor.new("Really blue")
}

local HeadSize = getgenv().HitSettings.HeadSize
local Transparency = getgenv().HitSettings.Transparency
local BrickColor = getgenv().HitSettings.BrickColor
local IsDisabled = true
local IsTeamCheckEnabled = false 

print("script by rhiandosetekkj ne segredo discord.gg/atropa")

game:GetService('RunService').RenderStepped:Connect(function()
    if IsDisabled then
        local localPlayer = game:GetService('Players').LocalPlayer -- family function
        if not localPlayer then return end

        local localPlayerTeam = localPlayer.Team

        for _, player in ipairs(game:GetService('Players'):GetPlayers()) do  -- partes e color da hbox
            if player ~= localPlayer and (not IsTeamCheckEnabled or player.Team ~= localPlayerTeam) then
                local humanoidRootPart = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
                if humanoidRootPart then
                    humanoidRootPart.Size = Vector3.new(HeadSize, HeadSize, HeadSize)
                    humanoidRootPart.BrickColor = BrickColor
                    humanoidRootPart.Material = Enum.Material.Neon
                    humanoidRootPart.CanCollide = false
                    humanoidRootPart.Transparency = Transparency
                end
            end
        end
    end
end)
